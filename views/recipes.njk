{% extends 'layout.njk' %}

{% block header %}
  <title>Receitas - Foodfy</title>
{% endblock header %}

{% block content %}
  <div class="container">
    <section id="card">
      <div class="card__featured">

        {% for item in items %}
        
          <div id="{{ item.id }}" class="card__content">
            <div class="content-image card-image">
              <img src=../assets/{{item.id}}.png alt="x-burger">
            </div>
            <div class="content-description">
              <p class="card__description">{{item.description}}</p>
              <p class="author">{{item.author}}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </section>
  </div>

  <div class="modal-overlay">
    <div class="modal">
      <div class="modal__content">
        <div class="content-image">
          <img class="modal__image" src="" alt="">
        </div>
        <div class="content-description">
          <p class="modal__description"></p>
          <p class="modal__author"></p>
        </div>
        <div class="close">
          <p>Fechar</p>
        </div>
      </div>
    </div>
  </div>

  <script src="/script.js"></script>

{% endblock content %}